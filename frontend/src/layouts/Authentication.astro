---
import '@fontsource/fira-mono';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
        <ViewTransitions/>
	</head>
	<body class="bg bg-authentication bg-center bg-no-repeat bg-cover min-h-screen z-20 flex place-items-center relative">
        <div class="bg-blue-950/30 absolute -z-10 inset-0"></div>
        <div class="container flex flex-col py-14 mx-auto items-center justify-center gap-7">
            <div class="text-center">
                <h1 class="text-cyan-100 font-extrabold text-4xl mb-5 animate-slide-in-top duration-150 ">Login for Read the most interesting things</h1>
                <p class="text-white text-normal w-full max-w-2xl mx-auto animate-fade-in animate-duration-300">
                    Discover a new world where the people share their knowledgement to help others, to share experiences writing books, blogs, anything you can imagine in you mind. What are you waiting? Join us to be <strong>Near</strong> of us.
                </p>
            </div>

            <slot />
        </div>


        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
	</body>
</html>
<style is:global>
	body{
        font-family: 'Fira Mono', monospace;
    }
</style>

